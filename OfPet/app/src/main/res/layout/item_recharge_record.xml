<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item"
    android:background="@color/colorF0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp23"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginTop="@dimen/dp9"
        android:layout_marginBottom="@dimen/dp9"
        android:background="@drawable/shape_7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp00"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="充值600宠币"
                android:textSize="@dimen/sp15"
                android:textColor="@color/color323232"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="@dimen/sp13"
                android:textColor="@color/color323232"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp12">

            <TextView
                android:layout_width="@dimen/dp00"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="充值600宠币"
                android:textSize="@dimen/sp12"
                android:textColor="@color/colorBBBBBB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-¥ 6.00"
                android:textSize="@dimen/sp13"
                android:textColor="@color/colorBBBBBB"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>