<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp22"
        android:layout_marginRight="@dimen/dp22"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:background="@drawable/shape_7">
        
        <com.shehuan.niv.NiceImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            app:corner_top_left_radius="@dimen/dp7"
            app:corner_top_right_radius="@dimen/dp7"
            android:src="@drawable/place_holder"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp10"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/dp00"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动时间：2019.04.08~2019.06.08"
                    android:ellipsize="end"
                    android:textColor="@color/color404040"
                    android:textSize="@dimen/sp13"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="已参加人数：456人"
                    android:ellipsize="end"
                    android:textColor="@color/colorA9A9A9"
                    android:textSize="@dimen/sp13"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中"
                android:textColor="@color/colorFF8000"
                android:textSize="@dimen/sp12"/>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>