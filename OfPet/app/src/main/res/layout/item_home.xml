<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp260"
    android:layout_marginRight="@dimen/dp5"
    android:id="@+id/layout_item"
    android:layout_marginTop="@dimen/dp5">

    <com.shehuan.niv.NiceImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:corner_radius="@dimen/dp5"
        android:src="@drawable/place_holder"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp7"
        android:layout_gravity="bottom">

        <com.shehuan.niv.NiceImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            app:is_circle="true"
            android:src="@drawable/place_holder_head"
            android:scaleType="centerCrop"/>

        <View android:layout_width="@dimen/dp00"
            android:layout_weight="1"
            android:layout_height="@dimen/dp1" />

        <ImageView
            android:layout_width="@dimen/dp13"
            android:layout_height="@dimen/dp13"
            android:src="@mipmap/like" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:text="000"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"/>

    </LinearLayout>

</FrameLayout>