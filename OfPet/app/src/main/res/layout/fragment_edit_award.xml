<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_top_1" />

    <View style="@style/divider_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp00"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="领取奖品"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:paddingLeft="@dimen/dp20"
            android:paddingTop="@dimen/dp20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp17">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:src="@drawable/place_holder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="奖品名称奖品名称奖品名称奖品名称奖品名称奖品名称奖品名称"
                android:lineSpacingExtra="@dimen/sp16"
                android:textColor="@color/color404040"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>

        <View style="@style/divider_1"
            android:layout_height="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20">

            <TextView
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/color5B5C5C"
                android:textSize="@dimen/sp14"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入收货姓名"
                android:textColorHint="@color/colorABABAB"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color5B5C5C"
                android:layout_marginLeft="@dimen/dp20"
                android:inputType="text"/>

        </LinearLayout>

        <View style="@style/divider_1"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20">

            <TextView
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/color5B5C5C"
                android:textSize="@dimen/sp14"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入联系电话"
                android:textColorHint="@color/colorABABAB"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color5B5C5C"
                android:layout_marginLeft="@dimen/dp20"
                android:inputType="phone"/>

        </LinearLayout>

        <View style="@style/divider_1"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20" />

        <LinearLayout android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20">

            <TextView
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textColor="@color/color5B5C5C"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:layout_width="@dimen/dp00"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="请选择收货区域"
                android:textColorHint="@color/colorABABAB"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color5B5C5C"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jingru1"/>

        </LinearLayout>

        <View style="@style/divider_1"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20">

            <TextView
                android:layout_width="@dimen/dp60"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:textColor="@color/color5B5C5C"
                android:textSize="@dimen/sp14"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入详细地址"
                android:textColorHint="@color/colorABABAB"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color5B5C5C"
                android:layout_marginLeft="@dimen/dp20"
                android:inputType="text"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:gravity="center">

        <TextView android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/queding1"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp7"
            android:layout_marginBottom="@dimen/dp7"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>