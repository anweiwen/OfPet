<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme_Bg" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="divider_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color5F5F5F_6</item>
    </style>

    <style name="divider_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorEAEAEA</item>
    </style>

    <style name="divider_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorF6F6F6</item>
    </style>

    <style name="TabLayout_Normal" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TabLayout_Normal_1" parent="TextAppearance.Design.Tab" >
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="TabLayout_Normal_2" parent="TextAppearance.Design.Tab" >
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StockTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
    </style>

</resources>
